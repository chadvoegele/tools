# Contributor: Chad Voegele <cavoegele@gmail.com>

pkgname=open_file
pkgver=0.0.1
pkgrel=1
pkgdesc="open_file script"
arch=('i686' 'x86_64')
license=('GPL')
makedepends=('gcc')
source=('git+https://github.com/chadvoegele/tools.git')
md5sums=('SKIP')

build() {
  cd "$srcdir/tools/open_file_code"
  make || return 1
}

package() {
  cd "$srcdir/tools/open_file_code"
  install -Dm 755 open_file $pkgdir/usr/bin/open_file
}

