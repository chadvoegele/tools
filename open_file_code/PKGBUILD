pkgname=open_file
pkgver=0.0.1
pkgrel=1
pkgdesc="open_file script"
arch=('i686' 'x86_64')
license=('GPL')
makedepends=('gcc')

build() {

  cp /home/chad/code/private/open_file_code/open_file.cpp \
     /home/chad/code/private/open_file_code/makefile \
     $srcdir

  cd $srcdir
  make || return 1
  install -Dm 755 $srcdir/open_file $pkgdir/home/chad/bin/open_file
  
}

