pkgname=my_python
pkgver=0.0.1
pkgrel=1
pkgdesc="My Python scripts."
arch=('i686' 'x86_64')
license=('GPL')
depends=('python')
source=('git+https://github.com/chadvoegele/tools.git')
md5sums=('SKIP')

package() {
  cd "$srcdir/tools/my_python"
  install -Dm 755 backup.py $pkgdir/$HOME/bin/backup.py
  install -Dm 755 open_firefox.py $pkgdir/$HOME/bin/open_firefox.py
  install -Dm 755 musdir.py $pkgdir/$HOME/bin/musdir.py
  install -Dm 755 musrename.py $pkgdir/$HOME/bin/musrename.py
}

