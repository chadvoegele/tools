# Contributor: Chad Voegele <cavoegele@gmail.com>

pkgname=dzen_notify
pkgver=20150215
pkgrel=1
pkgdesc="dzen scripts"
arch=('i686' 'x86_64')
license=('GPL')
depends=('python')
makedepends=('git')

_gitroot="https://github.com/chadvoegele"
_gitname="tools"

build() {
  cd $srcdir
  msg "Connecting to the GIT server...."

  if [[ -d $srcdir/$_gitname ]] ; then
    cd $_gitname
    git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot/$_gitname.git
    cd $_gitname  
  fi
}

package() {
  install -d $pkgdir$HOME/.dzen/bin/
  install -Dm 755 $srcdir/$_gitname/$pkgname/src/*py $pkgdir$HOME/.dzen/bin/
  install -d $pkgdir$HOME/.dzen/icons
  install -Dm 644 $srcdir/$_gitname/$pkgname/res/*xbm $pkgdir$HOME/.dzen/icons/
}

# vim:set ts=2 sw=2 et:
